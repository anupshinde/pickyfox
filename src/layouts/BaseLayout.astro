---
import '../styles/global.css';
import { SITE } from '../consts';
const { title, description, canonicalUrl, og, twitter, codeinjection_head, codeinjection_foot } = Astro.props;
const pageTitle = title ? `${title} | ${SITE.name}` : SITE.name;
const pageDescription = description || SITE.description;
const canonical = canonicalUrl || SITE.url + (Astro.url.pathname.endsWith('/') ? Astro.url.pathname : Astro.url.pathname + '/');
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <link rel="canonical" href={canonical} />
    <meta property="og:site_name" content={SITE.name} />
    <meta property="og:title" content={og?.title || pageTitle} />
    <meta property="og:description" content={og?.description || pageDescription} />
    {og?.image && <meta property="og:image" content={og.image} />}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={twitter?.title || pageTitle} />
    <meta name="twitter:description" content={twitter?.description || pageDescription} />
    {twitter?.image && <meta name="twitter:image" content={twitter.image} />}
    {codeinjection_head && <Fragment set:html={codeinjection_head} />}
  </head>
  <body class="min-h-screen bg-white font-sans text-slate-900 antialiased">
    <header class="border-b border-slate-200 bg-white">
      <div class="mx-auto flex w-full max-w-5xl flex-col gap-4 px-4 py-6 sm:flex-row sm:items-center sm:justify-between">
        <a class="text-2xl font-extrabold tracking-tight text-slate-900" href="/">{SITE.name}</a>
        <nav class="flex flex-wrap items-center gap-6 text-base font-medium text-slate-700 sm:flex-nowrap">
          <a class="transition hover:text-slate-900" href="/">Home</a>
          <a class="transition hover:text-slate-900" href="/about/">About</a>
          <a class="transition hover:text-slate-900" href="/contact/">Contact</a>
        </nav>
      </div>
    </header>
    <main class="mx-auto w-full max-w-5xl px-4">
      <slot />
    </main>
    <footer class="mt-16 bg-slate-900 text-slate-200">
      <div class="border-y border-slate-700/60">
        <div class="mx-auto flex w-full max-w-5xl flex-wrap items-center justify-center gap-8 px-4 py-6 text-sm font-medium">
          <a class="transition hover:text-white" href="/affiliate-disclosure/">Affiliate Disclosure</a>
          <a class="transition hover:text-white" href="/privacy-policy/">Privacy Policy</a>
          <a class="transition hover:text-white" href="/terms-of-use/">Terms of Use</a>
        </div>
      </div>
      <div class="mx-auto w-full max-w-5xl px-4 py-6 text-center text-xs text-slate-400">
        <p>Â© {new Date().getFullYear()} {SITE.name}. All rights reserved.</p>
      </div>
    </footer>
    {codeinjection_foot && <Fragment set:html={codeinjection_foot} />}
  </body>
</html>
