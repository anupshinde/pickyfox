---
interface Props {
  href: string;
  label?: string;
  class?: string;
}

const { href, label = 'Show more', class: className = '' } = Astro.props as Props;
---
<a class={`inline-flex items-center gap-2 ${className}`.trim()} href={href}>
  <span>{label}</span>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="18"
    height="18"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    aria-hidden="true"
  >
    <line x1="5" y1="12" x2="19" y2="12"></line>
    <polyline points="12 5 19 12 12 19"></polyline>
  </svg>
</a>
