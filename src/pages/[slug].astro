---
import { getCollection, getEntryBySlug } from 'astro:content';
import PostLayout from '../layouts/PostLayout.astro';
import PageLayout from '../layouts/PageLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  const pages = await getCollection('pages');
  return [...posts, ...pages].map((entry) => ({
    params: { slug: entry.slug },
    props: { collection: entry.collection }
  }));
}

const { collection } = Astro.props;
const entry = await getEntryBySlug(collection, Astro.params.slug);
if (!entry) throw new Error('Content not found');
const { Content } = await entry.render();
const Layout = collection === 'posts' ? PostLayout : PageLayout;
---
<Layout entry={entry}>
  <Content />
</Layout>
